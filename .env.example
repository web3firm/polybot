# Polybot Configuration
# Copy this file to .env and fill in your values

# ===================
# TELEGRAM BOT
# ===================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Your Telegram chat ID for receiving alerts
# Get it from @userinfobot or @RawDataBot
TELEGRAM_CHAT_ID=

# ===================
# SCANNING
# ===================

# How often to scan for opportunities (e.g., 30s, 1m, 5m)
SCAN_INTERVAL=30s

# Minimum spread percentage to trigger alerts (e.g., 1, 2, 3)
MIN_SPREAD_PCT=2

# Alert cooldown - don't re-alert same market within this period
ALERT_COOLDOWN=5m

# Max number of markets to scan (0 = unlimited)
MAX_MARKETS=0

# Polymarket API batch size (max per request, e.g., 1000)
POLYMARKET_BATCH_SIZE=1000

# Max Polymarket API requests per second (rate limit)
POLYMARKET_MAX_RPS=5

# ===================
# TRADING (Future)
# ===================
# Enable auto-trading (WARNING: Use at own risk)
TRADING_ENABLED=false

# Dry run mode - simulate trades without executing
DRY_RUN=true

# Private key for trading (DO NOT COMMIT!)
# WALLET_PRIVATE_KEY=

# Maximum trade amount per opportunity
# MAX_TRADE_AMOUNT=100

# ===================
# DATABASE
# ===================
# SQLite database path
DATABASE_PATH=./data/polybot.db

# ===================
# LOGGING
# ===================
# Log level: debug, info, warn, error
LOG_LEVEL=info
